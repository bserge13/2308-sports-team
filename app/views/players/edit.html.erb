<h1> Edit <%=@player.player_name %></h1>

<%= form_with url: "/players/#{@player.id}", method: :patch, local: true do |f| %>

  <%= f.label :player_name, "Player Name" %>
  <%= f.text_field :player_name, :value => @player.player_name %>

  <%= f.label :age %>
  <%= f.number_field :age, :value=> @player.age %>

  <%= f.label :hometown %>
  <%= f.text_field :hometown, :value => @player.hometown %>

  <%= f.label :all_star, "All-Star" %>
  <%= f.check_box :all_star, {}, true, false %>

  <%= f.submit "Update Player" %>
<% end %>