<h1> Create a Team </h1>

<%= form_with url: "/teams", method: :post, local: true do |f| %>
  <%= f.label :team_name, "Team Name" %>
  <%= f.text_field :team_name %>

  <%= f.label :city, "City"%>
  <%= f.text_field :city %>

  <%= f.label :number_of_titles, "Number of Titles" %>
  <%= f.number_field :number_of_titles %>

  <%= f.label :expansion_team, "Expansion Team" %>
  <%= f.check_box :expansion_team, {}, true, false %>

  <%= f.submit "Create Team" %>
  <% end %>